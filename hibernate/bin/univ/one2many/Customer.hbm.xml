<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	
	<class name="univ.one2many.Customer" table="T_Customer">
		<id name="id" type="long" column="ID">
			<generator class="increment"></generator>
		</id>
        <property name="name" type="string" column="NAME"></property>  
        
        <!-- 建立和Order的一对多关系 -->    
        <!-- cascade="save-update":当保存和更新customer对象时会自动保存和更新与其关系的order对象;
        	 inverse="true":此时将只按照many方对象的属性变化同步更新数据库
        -->  
        <set name="orders" cascade="save-update" inverse="true">
        	<key column="ORDER_NUMBER" />
        	<one-to-many class="univ.one2many.Order" />
        </set>
	</class>
</hibernate-mapping>
