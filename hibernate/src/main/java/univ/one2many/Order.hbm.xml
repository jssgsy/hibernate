<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd" >
<hibernate-mapping>
	
	<class name="univ.one2many.Order" table="T_Order">
		<id name="id" type="long" column="ID">
			<generator class="increment"></generator>
		</id>
        <property name="orderNumber" type="string" column="ORDER_NUMBER"></property>
        
        <!-- 设置和Customer的多对一关系 -->
        <!-- 注意是 name="customer"而不是property="customer"；
        	 cascade="save-update"：当保存和更新order对象时会自动保存和更新与其关系的customer对象；
        -->
        <many-to-one name="customer" column="CUSTOMER_ID" class="univ.one2many.Customer" cascade="save-update"/>
        
	</class>
</hibernate-mapping>
