<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC 
	"-//Hibernate/Hibernate Mapping DTD 3.0//EN"
	"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">
	
<hibernate-mapping default-lazy="false">
	<class name="com.univ.self.Example" table="example">
		<id name="id" type="long" column="id">
			<generator class="increment"></generator>
		</id>
        <property name="name"  column="name"></property>  
       	
       	<!-- 建立和自己的多对一关系
       	多的一方只需要建立外键
       	 -->
       	<many-to-one name="parent" column="parent" class="com.univ.self.Example" cascade="save-update"></many-to-one>
    	
         <!-- 建立和自己的一对多关系 
         一的一方只需要告诉关联的是哪个外键即可-->
        <set name="children" cascade="save-update">
        	<key column="parent" /><!-- 注意不是foreign-key属性 -->
        	<one-to-many class="com.univ.self.Example" />
        </set>
	</class>
</hibernate-mapping>
